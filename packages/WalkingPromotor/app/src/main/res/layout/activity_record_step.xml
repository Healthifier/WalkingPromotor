<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="io.github.healthifier.walking_promoter.activities.RecordStepActivity">

  <!-- ツールバー -->
  <androidx.appcompat.widget.Toolbar
    android:id="@+id/main_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#FF9800"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:title="歩数を記録する画面"
    app:titleTextColor="#ffffff"
    app:titleTextAppearance="@style/TextAppearance.Toolbar"
    android:textStyle="bold"
    tools:ignore="MissingConstraints" />

  <TextView
    android:id="@+id/titleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="16dp"
    android:text="日付を入力して歩数を記録しましょう"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textSize="36sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/main_toolbar" />

  <LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/titleTextView">


    <TextView
      android:id="@+id/calTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="4"
      android:gravity="center"
      android:text="年 / 月 / 日"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textSize="36sp"
      android:textStyle="bold" />

    <EditText
      android:id="@+id/goalEditText"
      android:focusable="false"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:ems="10"
      android:gravity="center"
      android:inputType="none"
      android:textSize="@dimen/ten_key_text_size" />

    <TextView
      android:id="@+id/hoTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
      android:gravity="center"
      android:text="歩"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textSize="36sp"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <Button
        android:id="@+id/calButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#F2FF8784"
        android:drawableStart="@drawable/ic_baseline_calendar_today_24"
        android:drawableTint="#FFFFFF"
        android:text="日付を入力"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:ignore="NestedWeights" />

      <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#FFF6CF"
        android:drawableStart="@drawable/ic_baseline_undo_24_60"
        android:text="前の画面に戻る"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1.5">

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/button_7"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="0"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="7"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_8"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="1"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="8"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_9"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="9"
          android:textSize="@dimen/ten_key_text_size" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/button_4"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="0"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="4"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_5"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="1"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="5"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_6"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="2"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="6"
          android:textSize="@dimen/ten_key_text_size" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/button_1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="0"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="1"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="1"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="2"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="2"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="3"
          android:textSize="@dimen/ten_key_text_size" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/button_cancel"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="0"
          android:layout_weight="1"
          android:backgroundTint="#F2FF8784"
          android:paddingLeft="0dp"
          android:paddingRight="0dp"
          android:text="訂正"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/ten_key_text_kanji_size"
          android:textStyle="bold" />

        <Button
          android:id="@+id/button_0"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="1"
          android:layout_weight="1"
          android:backgroundTint="#FFFFF6CF"
          android:text="0"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_decision"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="2"
          android:layout_weight="1"
          android:backgroundTint="#F2FF8784"
          android:paddingLeft="0dp"
          android:paddingRight="0dp"
          android:text="決定"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/ten_key_text_kanji_size"
          android:textStyle="bold" />
      </TableRow>
    </TableLayout>
  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
