<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/titleRoot"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingTop="10dp"
  android:paddingBottom="10dp">

  <TextView
    android:id="@+id/titleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="次週の目標を設定してください"
    android:textAppearance="?android:attr/textAppearanceLarge" />

  <EditText
    android:id="@+id/goalEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:gravity="center"
    android:inputType="none"
    android:textSize="@dimen/ten_key_text_size" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TableLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1">

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/button_7"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="0"
          android:layout_weight="1"
          android:text="7"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_8"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="1"
          android:layout_weight="1"
          android:text="8"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_9"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="9"
          android:textSize="@dimen/ten_key_text_size" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/button_4"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="0"
          android:layout_weight="1"
          android:text="4"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_5"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="1"
          android:layout_weight="1"
          android:text="5"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_6"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="2"
          android:layout_weight="1"
          android:text="6"
          android:textSize="@dimen/ten_key_text_size" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/button_1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="0"
          android:layout_weight="1"
          android:text="1"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="1"
          android:layout_weight="1"
          android:text="2"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="2"
          android:layout_weight="1"
          android:text="3"
          android:textSize="@dimen/ten_key_text_size" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
          android:id="@+id/button_cancel"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="0"
          android:layout_weight="1"
          android:paddingLeft="0dp"
          android:paddingRight="0dp"
          android:text="訂正"
          android:textSize="@dimen/ten_key_text_kanji_size" />

        <Button
          android:id="@+id/button_0"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="1"
          android:layout_weight="1"
          android:text="0"
          android:textSize="@dimen/ten_key_text_size" />

        <Button
          android:id="@+id/button_decision"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_column="2"
          android:layout_weight="1"
          android:paddingLeft="0dp"
          android:paddingRight="0dp"
          android:text="決定"
          android:textSize="@dimen/ten_key_text_kanji_size" />
      </TableRow>
    </TableLayout>

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1">

      <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="先週の目標："
        android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
        android:id="@+id/lastGoalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView"
        android:layout_toRightOf="@id/textView"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView"
        android:layout_below="@id/textView"
        android:text="先週の実績："
        android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
        android:id="@+id/lastActualTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_toRightOf="@id/textView2"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView2"
        android:layout_below="@id/textView2"
        android:text="次週の目標："
        android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
        android:id="@+id/goalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/textView3"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>
  </LinearLayout>

</LinearLayout>
