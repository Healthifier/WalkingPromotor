<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ViewMyDiaryActivity">

  <!-- ツールバー -->
  <androidx.appcompat.widget.Toolbar
    android:id="@+id/main_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#FF9800"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:title="自分が書いた日記"
    app:titleTextColor="#ffffff"
    app:titleTextAppearance="@style/TextAppearance.Toolbar"
    android:textStyle="bold"
    tools:ignore="MissingConstraints" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/main_toolbar">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="390dp"
      android:layout_weight="1">

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gridRecyclerView_third"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="1">

      <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/frame_style"
        android:drawableStart="@drawable/ic_baseline_undo_24_60"
        android:drawablePadding="10dp"
        android:textSize="32sp"
        android:text="前の画面に戻る"
        android:paddingHorizontal="16dp"
        android:textStyle="bold"/>

    </LinearLayout>
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
